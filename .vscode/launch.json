{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch TypeScript",
        "preLaunchTask": "Compile TypeScript",
        "cwd": "${workspaceFolder}",
        "program": "${file}",
        "outFiles": [
            "${workspaceFolder}/dist/**/*.js"
        ]
    }
  ]
}